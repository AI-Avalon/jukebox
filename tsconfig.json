{
  "compilerOptions": {
      "skipLibCheck": true,
      "module": "commonjs",
      "target": "esnext",
      "strict": true,
      "sourceMap": true,
      "noImplicitAny": true,
      "alwaysStrict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "baseUrl": ".",
      "typeRoots": [
          "node_modules/@types",
          "src/typings",
          "src/@types"
      ],
      "paths": {
        "typings/*": ["src/typings/*"]
      },
      "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**"]
}
